easyblock = 'MakeCp'

name = 'forbear'
version = '1.2.0'

homepage = 'https://github.com/szaghi/forbear'
description = "A Fortran Library for building and running fancy progress bar"

toolchain = {'name': 'GCCcore', 'version': '10.3.0'}

source_urls = ['https://github.com/szaghi/forbear/releases/download/v%(version)s']
sources = ['%(name)s-v%(version)s.tar.gz']
patches = [
    'forbear-1.2.0_use_external_FACE.patch',
]
checksums = [
    '72b399526ea291e4d5bed121f8a812aadfe7cea59a1553eb0adf0f3bf5ce1554',  # forbear-v1.2.0.tar.gz
    '26a586affade31cb83fa23d86a889b28de4b3c30ca6d63946740da0320ba818d',  # forbear-1.2.0_use_external_FACE.patch
]

builddependencies = [
    ('binutils', '2.36.1'),
    ('FoBiS', '3.0.5'),
]

dependencies = [
    ('FACE', '1.1.1'),
]

build_cmd = 'FoBiS.py build'
buildopts = '-mode shared-gnu '

files_to_copy = [(['shared/mod/*.mod'], 'include'), (['shared/libforbear.%s' % SHLIB_EXT], 'lib')]

sanity_check_paths = {
    'files': ['include/forbear.mod', 'lib/libforbear.%s' % SHLIB_EXT],
    'dirs': [],
}

moduleclass = 'tools'
