easyblock = 'MakeCp'

name = 'mDust'
version = '20231029'

homepage = 'https://github.com/lh3/mdust'
description = "mdust from DFCI Gene Indices Software Tools (archived for a historical record only)"

toolchain = {'name': 'GCC', 'version': '10.3.0'}

sources = [{
    'filename': 'mdust.tar.gz',
    'git_config': {
        'url': 'https://github.com/lh3',
        'repo_name': 'mdust',
        'commit': '3e3fed8',
        'clone_into': 'mdustSrc',
    },
}]
# git clone, might have to adjust this checksum
checksums = ['6fe21806e6bcd3810babed8d83dfb9ff072fcb9d3a31cd43da9cb9670c0ec6f0']

configure_without_installdir = True

files_to_copy = []

postinstallcmds = ['mkdir %(installdir)s/bin',
                   'cp mdust %(installdir)s/bin']

sanity_check_paths = {
    'files': ['bin/mdust'],
    'dirs': []
}

sanity_check_commands = ["mdust < /dev/null"]

moduleclass = 'bio'
