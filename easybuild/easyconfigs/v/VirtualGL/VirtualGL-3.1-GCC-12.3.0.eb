easyblock = 'CMakeMake'

name = 'VirtualGL'
version = '3.1'

homepage = 'https://virtualgl.org/'
description = """VirtualGL is an open source toolkit that gives any Linux or 
Unix remote display software the ability to run OpenGL applications with full 
hardware acceleration."""

toolchain = {'name': 'GCC', 'version': '12.3.0'}

source_urls = ['https://github.com/VirtualGL/virtualgl/archive/']
sources = ['%(version)s.tar.gz']
checksums = ['d3d1f721dd9fa7408803b38fcee013483b75ae8bfbbdb84834a72df33ac848c8']
patches = [
    # In include/X11/XKBlib.h in the X11 sources, function XkbOpenDisplay(),
    # the first argument has type `_Xconst char*`, which causes a compile issue
    # with server/faker-sym.h, as the latter assumes a non-const `char *`.
    # This patch is from the VirtualGL official repo, for post-3.0.1. There,
    # it was to fixed compiling against libX11 1.8, but it works here as well
#    'virtualgl-3.0.1-libX11-1.8.patch'
]

builddependencies = [
    ('CMake', '3.26.3'),
    ('binutils', '2.40'),
]

dependencies = [
    ('libjpeg-turbo', '2.1.5.1'),
    ('Mesa', '23.1.4'),
    ('libGLU', '9.0.3'),
    ('pocl', '4.0'),
    ('X11', '20230603'),
]

local_binaries = [
    'cpustat', 'glreadtest', 'glxinfo', 'glxspheres64', 'nettest', 'tcbench',
    'vglclient', 'vglconfig', 'vglconnect', 'vglgenkey', 'vgllogin', 'vglrun',
    'vglserver_config'
]

sanity_check_paths = {
    'files': ['bin/%s' % x for x in local_binaries],
    'dirs': ['lib64', 'share', 'include'],
}

moduleclass = 'vis'
