easyblock = 'CMakeMake'

name = 'DP3'
version = '6.0'
homepage = 'https://dp3.readthedocs.io/'
description = """DP3: streaming processing pipeline for radio interferometric data."""

toolchain = {'name': 'foss', 'version': '2022a'}

sources = [{
    'filename': '%(name)s-v%(version)s.tar.gz',
    'git_config': {
        'url': 'https://git.astron.nl/RD',
        'repo_name': '%(name)s',
        'tag': 'v%(version)s',
        'clone_into': '%(name)s',
        'recursive': True,
    },
}]

# using CMake built with GCCcore to avoid relying on the system compiler to build it
builddependencies = [
    ('binutils', '2.38'),  # to make CMake compiler health check pass on old systems
    ('CMake', '3.24.3'),
]
dependencies = [
    ('casacore', '3.5.0'),
    ('Boost', '1.79.0'),
    ('CFITSIO', '4.2.0'),
    ('WCSLIB', '7.11'),
    ('GSL', '2.7'),
    ('HDF5', '1.13.2', '-serial'),
    ('Python', '3.10.4'),
    ('EveryBeam', '0.5.2'),
    ('Armadillo', '11.4.3'),
    ('AOFlagger', '3.4.0')
]

moduleclass = 'astro'
